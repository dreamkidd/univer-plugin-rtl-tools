{
  "name": "@dreamkidd/univer-plugin-rtl-tools",
  "version": "0.2.0",
  "description": "A Univer plugin to provide UI tools and smart detection for Right-To-Left (RTL) text layout.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "univer",
    "plugin",
    "rtl",
    "bidi",
    "spreadsheet",
    "arabic",
    "hebrew"
  ],
  "author": "Dream Kidd",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dreamkidd/univer-plugin-rtl-tools.git"
  },
  "peerDependencies": {
    "@univerjs/core": ">=0.4.0",
    "@univerjs/engine-render": ">=0.4.0",
    "@univerjs/ui": ">=0.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.34",
    "@univerjs/core": "^0.4.0",
    "@univerjs/ui": "^0.4.0",
    "jsdom": "^28.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "bidi-js": "^1.0.3"
  }
}
